<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backthemeapp">

  <ImageButton
      android:layout_width="112dp"
      android:layout_height="78dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="184dp"
      android:layout_marginEnd="279dp"
      android:background="@drawable/men"
      android:orientation="horizontal"
      android:id="@+id/menbutton"/>

  <ImageButton
      android:id="@+id/womenbutton"
      android:layout_width="112dp"
      android:layout_height="78dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="150dp"
      android:layout_marginTop="184dp"
      android:layout_marginEnd="149dp"
      android:background="@drawable/women"
      android:orientation="horizontal" />

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="80dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="280dp"
      android:layout_marginTop="183dp"
      android:layout_marginEnd="19dp"
      android:background="@drawable/kids"
      android:orientation="horizontal"
      android:id="@+id/kidsbutton"/>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNavigationView"
      android:layout_width="375dp"
      android:layout_height="65dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="10dp"
      android:background="@drawable/bottom_background"
      android:elevation="2dp"
      app:itemIconSize="30dp"
      app:itemIconTint="@drawable/item_selector"
      app:itemRippleColor="@android:color/transparent"
      app:labelVisibilityMode="unlabeled"
      app:menu="@menu/bottomnav">

  </com.google.android.material.bottomnavigation.BottomNavigationView>


  <androidx.appcompat.widget.SearchView
      android:id="@+id/search"
      android:layout_width="wrap_content"
      android:layout_height="61dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="11dp"
      android:layout_marginTop="19dp"
      android:layout_marginEnd="3dp"
      android:background="@drawable/border"
      android:focusable="false"
      app:iconifiedByDefault="false"
      app:queryHint="What are you looking for?"
      app:searchHintIcon="@null"
      app:searchIcon="@drawable/baseline_search_24" />

  <RelativeLayout
      android:id="@+id/omaninfo"
      android:layout_width="405dp"
      android:layout_height="92dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="3dp"
      android:layout_marginTop="84dp"
      android:layout_marginEnd="3dp"
      android:layout_marginBottom="92dp"
      android:background="@drawable/omaninfoform"
      android:orientation="horizontal"
      tools:ignore="NotSibling">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="64dp"
        android:text="-About OMAN-"
        android:textColor="@color/darkappcolor"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="6dp"
        android:text="Oman is distinguished by its harmony between the beauty of the charming landscape and the greatness of history and heritage."
        android:textColor="@color/darkappcolor"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="327dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/omaninfo"
        tools:ignore="InvalidId" />
  </RelativeLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="387dp"
      android:layout_height="400dp"
      android:layout_above="@+id/bottomNavigationView"
      android:layout_below="@+id/womenbutton"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="11dp"
      android:layout_marginTop="13dp"
      android:layout_marginEnd="13dp"
      android:layout_marginBottom="56dp"
      android:scrollbars="vertical">
  </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>




